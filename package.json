{
  "name": "react-pack-mule",
  "version": "1.0.4",
  "description": "Simple global state store",
  "author": "Munawwar",
  "license": "MIT",
  "type": "module",
  "repository": "https://github.com/Munawwar/react-pack-mule",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc",
    "build:js": "esbuild src/index.tsx --bundle --minify --sourcemap --external:react --external:zustand --format=esm --outfile=dist/index.js",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/public",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitest/ui": "^4.0.10",
    "esbuild": "^0.27.0",
    "gh-pages": "^2.0.1",
    "jsdom": "^27.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.10",
    "zustand": "^5.0.0"
  }
}

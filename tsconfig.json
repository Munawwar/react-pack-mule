{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es2023",
    "lib": [
      "es2023",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "docs",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
